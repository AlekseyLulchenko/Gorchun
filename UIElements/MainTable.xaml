                <DataGridTemplateColumn Header="Летучесть, мг/л" Width="*"/>
                <DataGridTemplateColumn Header="С мах, мг/мл при 20ºС" Width="*"/>
                <DataGridTemplateColumn Header="Растворимость, г/100 г вод" Width="*"/>
